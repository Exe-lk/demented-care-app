<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".UpdatePatientActivity"
    android:background="@color/white">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
android:padding="16dp">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Update Patient Information"
    android:textSize="30dp"
    android:textStyle="bold"
    android:textColor="#7868A3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Please Provide Correct Patient NIC number"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:textStyle="normal"
        android:textColor="#000000"/>



    <EditText
        android:id="@+id/update_nic_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="NIC Number"
        />

    <EditText
        android:id="@+id/update_first_name_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="First Name" />

    <EditText
        android:id="@+id/update_last_name_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/update_home_contact_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="Home Contact" />

    <EditText
        android:id="@+id/update_guardian_name_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="Guardian's Full Name" />

    <EditText
        android:id="@+id/update_home_address_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="Home Address" />

    <EditText
        android:id="@+id/update_guardian_contact_number_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="Guardian's Contact Number" />

    <EditText
        android:id="@+id/update_guardian_nic_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="#403C3C"
        android:hint="Guardian's NIC Number" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:layout_marginTop="20dp"
        android:background="@drawable/log_btn_background"/>

</LinearLayout>
</ScrollView>