<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".DoctorScreen">

    <!-- Your existing layout content goes here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/main_header_selector"
        tools:ignore="Orientation">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/imgbg"
        android:scaleType="fitXY"
        android:backgroundTint="#819DBA"
        android:adjustViewBounds="true"/>

    <!-- Text Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor and Nurse Dashboard"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#7876E1"
        android:padding="10dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bacground_item"
        android:backgroundTint="#7876E2"

        tools:ignore="Orientation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:background="@drawable/btn_background"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/tempimg3"
                        android:textColor="#E0EEF9"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Patients Health check"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/button"
                        app:layout_constraintEnd_toEndOf="@+id/button"
                        app:layout_constraintTop_toBottomOf="@id/button" />

                    <ImageButton
                        android:id="@+id/button2"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn2"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/face2"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/button"
                        app:layout_constraintTop_toTopOf="@id/button"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="167dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Check patient’s emotion by face"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/button2"
                        app:layout_constraintStart_toStartOf="@+id/button2"
                        app:layout_constraintTop_toBottomOf="@id/button2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/managepatients"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:background="@drawable/btn_background"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/recimg"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:layout_width="159dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Check patient’s emotion by voice"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/managepatients"
                        app:layout_constraintStart_toStartOf="@+id/managepatients"
                        app:layout_constraintTop_toBottomOf="@id/managepatients" />

                    <ImageButton
                        android:id="@+id/trackingdevice"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn2"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/chatbot"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/managepatients"
                        app:layout_constraintTop_toTopOf="@id/managepatients"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="AI Chatbot"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/trackingdevice"
                        app:layout_constraintEnd_toEndOf="@+id/trackingdevice"
                        app:layout_constraintTop_toBottomOf="@id/trackingdevice" />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/restritpatient"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:background="@drawable/btn_background"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/cctv"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:layout_width="159dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Check patient’s in Restricted Area"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/restritpatient"
                        app:layout_constraintStart_toStartOf="@+id/restritpatient"
                        app:layout_constraintTop_toBottomOf="@id/restritpatient" />

                    <ImageButton
                        android:id="@+id/loginButton"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn2"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/logout"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/restritpatient"
                        app:layout_constraintTop_toTopOf="@id/restritpatient"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Log out"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/loginButton"
                        app:layout_constraintEnd_toEndOf="@+id/loginButton"
                        app:layout_constraintTop_toBottomOf="@id/loginButton" />





                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/location"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:background="@drawable/btn_background"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/location"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:layout_width="159dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Track patient"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/location"
                        app:layout_constraintStart_toStartOf="@+id/location"
                        app:layout_constraintTop_toBottomOf="@id/location" />






                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    </LinearLayout>


</ScrollView>