<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_header_selector"
    tools:context=".manage_patients">

    <!-- Image Section -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/patient_2"
        android:scaleType="fitXY"
        android:backgroundTint="#819DBA"
        android:adjustViewBounds="true"/>

    <!-- Text Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Patients"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#7876E1"
        android:padding="10dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="641dp"
        android:background="@drawable/bacground_item"
        android:backgroundTint="#7876E2"

        tools:ignore="Orientation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/button"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:background="@drawable/btn_background"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/add"
                        android:textColor="#E0EEF9"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Add Patients"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/button"
                        app:layout_constraintStart_toStartOf="@+id/button"
                        app:layout_constraintTop_toBottomOf="@id/button" />

                    <ImageButton
                        android:id="@+id/button2"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn2"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/update"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/button"
                        app:layout_constraintTop_toTopOf="@id/button"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Update Patients"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/button2"
                        app:layout_constraintStart_toStartOf="@+id/button2"
                        app:layout_constraintTop_toBottomOf="@id/button2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/managepatients"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:background="@drawable/btn_background"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/delete"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="32dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Delete Patients"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/managepatients"
                        app:layout_constraintStart_toStartOf="@+id/managepatients"
                        app:layout_constraintTop_toBottomOf="@id/managepatients" />

                    <ImageButton
                        android:id="@+id/trackingdevice"
                        android:layout_width="157dp"
                        android:layout_height="168dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn2"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/searchpatient"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/managepatients"
                        app:layout_constraintTop_toTopOf="@id/managepatients"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="View Patients"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/trackingdevice"
                        app:layout_constraintStart_toStartOf="@+id/trackingdevice"
                        app:layout_constraintTop_toBottomOf="@id/trackingdevice" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
