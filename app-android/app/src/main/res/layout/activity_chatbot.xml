<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chatbot"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/robo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#042F8D">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AI  Chatbot"
            android:gravity="center"
            android:textColor="#1393F1"
            android:textSize="30sp"
            android:textStyle="bold"
           />

    </LinearLayout>
    <!-- RecyclerView to display chat messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/messageInputLayout"
        android:layout_marginTop="60dp"/>
    <!-- RelativeLayout for the message input -->
    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="395dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5">

        <!-- EditText for user input -->
        <EditText
            android:id="@+id/idEditMessage"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/edittext_border"
            android:hint="  Enter Your Message"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#042F8D"
            android:textColor="#1393F1"/>

        <!-- FloatingActionButton for sending messages -->
        <ImageButton
            android:id="@+id/idFABSend"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/log_btn_background"
            android:src="@android:drawable/ic_menu_send"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            app:backgroundTint="#042F8D"/>
    </LinearLayout>
</RelativeLayout>

